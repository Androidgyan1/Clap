<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OtpScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/password" />


            <TextView
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:fontFamily="@font/popinnes_light"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Verfication" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/popinnes_light"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"
                android:text="Enter 6 Digit Code send\nto - 9111153783" />



            <com.chaos.view.PinView
                android:id="@+id/pinView"
                style="@style/PinWidget.PinView"
                android:layout_width="60dp"
                android:layout_marginTop="18dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="18sp"
                app:itemCount="6"
                app:itemHeight="48dp"
                app:itemRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lineColor="@android:color/darker_gray"
                app:viewType="rectangle" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Tap to re - enter phone number" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="verifaction"
                android:background="@drawable/button_bg"
                android:textColor="@android:color/white"
                android:text="Continue"
                android:layout_marginTop="30dp" />





        </LinearLayout>















    </ScrollView>


</LinearLayout>